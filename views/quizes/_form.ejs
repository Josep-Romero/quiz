		<label for="tema" class="rem">Tematica: </label>
		<select 
			type="text" 
			id="tema" 
			name="quiz[tematica]" 
			<% if (quiz.tematica==="") { %>	placeholder="Seleccione..." <% } %>
		>
			<option <% if (quiz.tematica==="otro") { %>	selected="selected" <% } %> value="otro">Otro</option>
			<option <% if (quiz.tematica==="humanidades") { %>	selected="selected" <% } %> value="humanidades">Humanidades</option>
			<option <% if (quiz.tematica==="ocio") { %>	selected="selected" <% } %> value="ocio">Ocio</option>
			<option <% if (quiz.tematica==="ciencia") { %>	selected="selected" <% } %> value="ciencia">Ciencia</option>
			<option <% if (quiz.tematica==="tecnologia") { %>	selected="selected" <% } %> value="tecnologia">Tecnologia</option>
		</select>
		<p>
		<label for="preg" class="rem">Pregunta: </label>
		<input 
			type="text" 
			id="preg" 
			name="quiz[pregunta]" 
			size= "20" 
			value="<%= quiz.pregunta %>"
			<% if (quiz.pregunta==="") { %>	placeholder="Texto de la pregunta" <% } %>
		/> 
		<p>
		<label for="resp" class="rem">Respuesta: </label>
		<input 
			type="text" 
			id="resp" 
			name="quiz[respuesta]" 
			size= "20" 
			value="<%= quiz.respuesta %>"
			<% if (quiz.respuesta==="") { %> placeholder="Respuesta a la pregunta" <% } %>
		/> 
		<p>
		<a href="/quizes"><button type="button">Cancelar </button></a>
		<input type="submit" value="Salvar">
